<h1 class="recipe_title"><%= @recipe.title %></h1>
<div class="recipe_photo">
  <img src="<%= @recipe.photo.url %>" alt="<%= @recipe.photo.title %>">
</div>
<p>Tags: <strong><%= @tags.join(', ') %></strong></p>
<p>Chef: <strong><%= @chef || "Marley Spoon's original" %></strong></p>
<h4>Description:</h4>
<p><%= @recipe.description %></p>

<%= link_to 'Go Back', :back %>
